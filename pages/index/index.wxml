<!--index.wxml-->
<view class="page">
  <view class="page__hd page__bd_spacing">
     <view class="avatar">
      <image class="avatar__pic" src="{{logo}}"></image>
    </view> 
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="weui-cells">
        <block wx:for="{{lists}}" wx:key="{{index}}">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name="{{index}}" data-id="{{index}}" placeholder="请输入选项" value="{{item.value}}" bindinput='bindKeyInput'></input>
            </view>
          </view>
        </block>
        <view class=" weui-cell weui-cell_link" bindtap='addList'>
          <view class="weui-cell__bd">添加选项</view>
        </view>
        <view class="weui-cell weui-cell_link" wx:if="{{lists.length> 2}}" bindtap='delList'>
          <view class="weui-cell__bd">删除选项</view>
        </view>
      </view>
      <button class="weui-btn" type="primary" formType="submit">答案</button>
      <button class="weui-btn" type="warn" formType="reset">重置选项</button>
    </form>
  </view>
</view>